version: '3'
services:
    web:
        build:
            context: ./
            dockerfile: .docker/web.docker
        volumes:
            - ./:/var/www/html
        ports:
            - "8888:80"
        links:
            - app
    app:
        build:
            context: ./
            dockerfile: .docker/app.docker
        volumes:
            - ./:/var/www/html
        links:
            - database
            - cache
        environment:
            - "DB_PORT=3306"
            - "DB_HOST=database"
            - "REDIS_PORT=6379"
            - "REDIS_HOST=cache"
    database:
        image: mysql:5.6
        environment:
            - "MYSQL_ROOT_PASSWORD=secret"
            - "MYSQL_DATABASE=gazette"
        ports:
            - "33062:3306"
    cache:
        image: redis:3.0
        ports:
            - "63792:6379"
    composer:
        restart: 'no'
        image: prooph/composer:7.1
        command: install
        volumes:
            - ./:/app